{
    "manifest_version": 3,
    "name": "Moodboard",
    "version": "1.0",
    "description": "Capture and organize content into themed moodboards",
    "permissions": ["storage", "scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "index.html"
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["assets/*"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  